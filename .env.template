# TimescaleDB 数据库配置
# 请根据您的实际环境修改以下配置项

# 数据库连接信息
DB_HOST=localhost
DB_PORT=5432
DB_NAME=securities_data
DB_USER=your_username
DB_PASSWORD=your_password

# 连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# 应用配置
APP_NAME=securities_data_storage
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# TimescaleDB 特定配置
# 时序数据压缩策略（天数）
COMPRESSION_INTERVAL_DAYS=7
# 数据保留策略（天数）
DATA_RETENTION_DAYS=1095